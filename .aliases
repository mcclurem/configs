# allow subl over ssh
# NOTE: this could be customized for any $EDITOR
subl-ssh() {
  if [ -z "$2" ]; then echo "Usage: subl-ssh server file" && return; fi
  scp -q $1:$2 /tmp/$2 2>/dev/null && \
  subl -w /tmp/$2 && \
  scp -q /tmp/$2 $1:$2 2>/dev/null
  rm /tmp/$2
}

